@model Bbs.Models.Note

<div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <form class="form-horizontal" method="post" asp-controller="Note" asp-action="Add">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="form-group">
                <label>제목</label>
                <input type="text" class="form-control" asp-for="Title" placeholder="제목 입력"></input>
                <span class="text-danger" asp-validation-for="Title"></span>
            </div>

            <div class="form-group center">
                <textarea class="form-control editor" rows="20" asp-for="Contents" placeholder="내용 입력"></textarea>
                <span class="text-danger" asp-validation-for="Contents"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">저장</button>
                <a type="btn btn-default" asp-controller="Note" asp-action="Index">취소</a>
            </div>
        </form>
    </div>
    <div class="col-lg-2"></div>
</div>