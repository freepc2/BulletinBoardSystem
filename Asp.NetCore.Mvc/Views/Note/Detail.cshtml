<div class="row">
    <div class="col-lg-12">
        <h3 class="page-header">상세 읽기 - @Model.Title</h3>
    </div>
</div>

<div class="row">
    <div class="col-lg-10">
        <div class="panel panel-default">
            <div class="panel-header">
                <label>번호 :</label>@Model.No
                <label>제목 :</label>@Model.Title
            </div>
            <div class="panel-body">
                <label>내용 :</label>@Html.Raw(Model.Contents)
            </div>
            <div class="panel-footer text-right">
                <a class="btn btn-primary" asp-controller="Note" asp-action="Index">
                    목록
                </a>
                <a class="btn btn-danger" asp-controller="Note" asp-action="Edit" asp-route-No="@Model.No">
                    수정
                </a>
            </div>
        </div>
    </div>
</div>